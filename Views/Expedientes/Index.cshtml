@model IEnumerable<ColegioSanJose.Models.Expediente>

@{
    ViewData["Title"] = "Expedientes Académicos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Nuevo Expediente
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Alumno</th>
                        <th>Materia</th>
                        <th>Nota Final</th>
                        <th>Observaciones</th>
                        <th>Fecha Inscripción</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Alumno?.NombreCompleto</td>
                            <td>@item.Materia?.Nombre</td>
                            <td>@item.NotaFinal.ToString("F2")</td>
                            <td>@item.Observaciones</td>
                            <td>@item.FechaInscripcion.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i> Ver
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h5>No hay expedientes registrados</h5>
            <p>Comienza agregando el primer expediente al sistema.</p>
        </div>
    }
</div>