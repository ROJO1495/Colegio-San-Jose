@model ColegioSanJose.Models.Materia

@{
    ViewData["Title"] = "Detalles de la Materia";
}

<div class="container mt-4">
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-header bg-info text-white">
            <h4><i class="bi bi-eye"></i> @ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Nombre:</dt>
                <dd class="col-sm-8">@Model.Nombre</dd>

                <dt class="col-sm-4">Código:</dt>
                <dd class="col-sm-8">@Model.Codigo</dd>

                <dt class="col-sm-4">Créditos:</dt>
                <dd class="col-sm-8">@Model.Creditos</dd>

                <dt class="col-sm-4">Descripción:</dt>
                <dd class="col-sm-8">@Model.Descripcion</dd>
            </dl>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>