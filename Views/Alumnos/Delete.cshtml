@model ColegioSanJose.Models.Alumno

@{
    ViewData["Title"] = "Eliminar Alumno";
}

<div class="container mt-4">
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-header bg-danger text-white">
            <h4><i class="bi bi-trash"></i> @ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger mb-4">¿Está seguro que desea eliminar este alumno?</h5>

            <dl class="row">
                <dt class="col-sm-4">Nombre Completo:</dt>
                <dd class="col-sm-8">@Model.NombreCompleto</dd>

                <dt class="col-sm-4">Fecha de Nacimiento:</dt>
                <dd class="col-sm-8">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Teléfono:</dt>
                <dd class="col-sm-8">@Model.Telefono</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>