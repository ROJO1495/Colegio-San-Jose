@model ColegioSanJose.Models.Expediente

@{
    ViewData["Title"] = "Editar Expediente";
}

<div class="container mt-4">
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-header bg-warning text-white">
            <h4><i class="bi bi-pencil-square"></i> @ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="AlumnoId" class="form-label">Alumno</label>
                    <select asp-for="AlumnoId" asp-items="ViewBag.AlumnoId" class="form-select">
                        <option value="">-- Seleccionar Alumno --</option>
                    </select>
                    <span asp-validation-for="AlumnoId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MateriaId" class="form-label">Materia</label>
                    <select asp-for="MateriaId" asp-items="ViewBag.MateriaId" class="form-select">
                        <option value="">-- Seleccionar Materia --</option>
                    </select>
                    <span asp-validation-for="MateriaId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NotaFinal" class="form-label">Nota Final</label>
                    <input asp-for="NotaFinal" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="NotaFinal" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Observaciones" class="form-label">Observaciones</label>
                    <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Observaciones" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FechaInscripcion" class="form-label">Fecha de Inscripción</label>
                    <input asp-for="FechaInscripcion" type="date" class="form-control" />
                    <span asp-validation-for="FechaInscripcion" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-check-lg"></i> Actualizar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}