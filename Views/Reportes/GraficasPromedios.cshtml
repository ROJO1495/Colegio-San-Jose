@model List<ColegioSanJose.Models.GraficaPromedioViewModel>
@{
    ViewData["Title"] = "Gráficas de Promedios";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-4">@ViewData["Title"]</h2>

    <div class="row">
        <!--Grafica de barras-->
        <div class="col-md-8 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5><i class="bi bi-bar-chart"></i> Promedios por Alumno</h5>
                </div>
                <div class="card-body">
                    <canvas id="graficaPromedios" width="400" height="200"></canvas>
                </div>
            </div>
        </div>

        <!-- Grafica circular-->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5><i class="bi bi-pie-chart"></i> Estado Académico</h5>
                </div>
                <div class="card-body">
                    <canvas id="graficaEstado" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de Datos -->
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-info text-white">
            <h5><i class="bi bi-table"></i> Datos Detallados</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Alumno</th>
                            <th>Promedio</th>
                            <th>Materias Cursadas</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Alumno</td>
                                <td>@item.Promedio.ToString("F2")</td>
                                <td>@item.CantidadMaterias</td>
                                <td>
                                    @if (item.Promedio >= 70)
                                    {
                                        <span class="badge bg-success">@item.Estado</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@item.Estado</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var alumnos = @Html.Raw(Json.Serialize(Model.Select(p => p.Alumno)));
        var promedios = @Html.Raw(Json.Serialize(Model.Select(p => p.Promedio)));

        var aprobados = @ViewBag.Aprobados;
        var reprobados = @ViewBag.Reprobados;

        //Grafica de barras
        var ctx1 = document.getElementById('graficaPromedios').getContext('2d');
        var graficaPromedios = new Chart(ctx1, {
            type: 'bar',
            data: {
                labels: alumnos,
                datasets: [{
                    label: 'Promedio General',
                    data: promedios,
                    backgroundColor: 'rgba(54, 162, 235, 0.8)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100,
                        title: {
                            display: true,
                            text: 'Promedio'
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Alumnos'
                        }
                    }
                }
            }
        });

        // Grafica circular
        var ctx2 = document.getElementById('graficaEstado').getContext('2d');
        var graficaEstado = new Chart(ctx2, {
            type: 'pie',
            data: {
                labels: ['Aprobados', 'Reprobados'],
                datasets: [{
                    data: [aprobados, reprobados],
                    backgroundColor: [
                        'rgba(75, 192, 192, 0.8)',
                        'rgba(255, 99, 132, 0.8)'
                    ],
                    borderColor: [
                        'rgba(75, 192, 192, 1)',
                        'rgba(255, 99, 132, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    </script>
}