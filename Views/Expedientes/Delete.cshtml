@model ColegioSanJose.Models.Expediente

@{
    ViewData["Title"] = "Eliminar Expediente";
}

<div class="container mt-4">
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-header bg-danger text-white">
            <h4><i class="bi bi-trash"></i> @ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger mb-4">¿Está seguro que desea eliminar este expediente?</h5>

            <dl class="row">
                <dt class="col-sm-4">Alumno:</dt>
                <dd class="col-sm-8">@Model.Alumno?.NombreCompleto</dd>

                <dt class="col-sm-4">Materia:</dt>
                <dd class="col-sm-8">@Model.Materia?.Nombre</dd>

                <dt class="col-sm-4">Nota Final:</dt>
                <dd class="col-sm-8">@Model.NotaFinal.ToString("F2")</dd>

                <dt class="col-sm-4">Observaciones:</dt>
                <dd class="col-sm-8">@Model.Observaciones</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>