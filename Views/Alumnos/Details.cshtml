@model ColegioSanJose.Models.Alumno

@{
    ViewData["Title"] = "Detalles del Alumno";
}

<div class="container mt-4">
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-header bg-info text-white">
            <h4><i class="bi bi-eye"></i> @ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Nombre Completo:</dt>
                <dd class="col-sm-8">@Model.NombreCompleto</dd>
                
                <dt class="col-sm-4">Fecha de Nacimiento:</dt>
                <dd class="col-sm-8">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</dd>
                
                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.Email</dd>
                
                <dt class="col-sm-4">Teléfono:</dt>
                <dd class="col-sm-8">@Model.Telefono</dd>
            </dl>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>