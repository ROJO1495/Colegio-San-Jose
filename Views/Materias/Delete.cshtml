@model ColegioSanJose.Models.Materia

@{
    ViewData["Title"] = "Eliminar Materia";
}

<div class="container mt-4">
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-header bg-danger text-white">
            <h4><i class="bi bi-trash"></i> @ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger mb-4">¿Está seguro que desea eliminar esta materia?</h5>

            <dl class="row">
                <dt class="col-sm-4">Nombre:</dt>
                <dd class="col-sm-8">@Model.Nombre</dd>

                <dt class="col-sm-4">Código:</dt>
                <dd class="col-sm-8">@Model.Codigo</dd>

                <dt class="col-sm-4">Créditos:</dt>
                <dd class="col-sm-8">@Model.Creditos</dd>

                <dt class="col-sm-4">Descripción:</dt>
                <dd class="col-sm-8">@Model.Descripcion</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>